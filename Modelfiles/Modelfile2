FROM gemma3:latest

TEMPLATE """{{- range $i, $_ := .Messages }}
{{- $last := eq (len (slice $.Messages $i)) 1 }}
{{- if or (eq .Role "user") (eq .Role "system") }}<start_of_turn>user
{{ .Content }}<end_of_turn>
{{ if $last }}<start_of_turn>model
{{ end }}
{{- else if eq .Role "assistant" }}<start_of_turn>model
{{ .Content }}{{ if not $last }}<end_of_turn>
{{ end }}
{{- end }}
{{- end }}"""
PARAMETER stop <end_of_turn>
PARAMETER temperature 0.1
PARAMETER top_k 64
PARAMETER top_p 0.3

SYSTEM """
You are a medicinal chemistry expert. Your task is to predict the ATC level 4 code or codes for a compound given its SMILES string. Answer only with the ATC code or codes, and nothing else. Format like: A01AB or A01AB, B01AC
"""